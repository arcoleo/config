    brr = "!sh -c 'git branch $1 && git push -u origin $1' -"
    brrc = "!sh -c 'git branch $1 && git push -u origin $1 && git checkout $1' -"
    brd = "!sh -c 'git branch -d $1 && git push origin --delete $1' -"

